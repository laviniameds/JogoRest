<Window x:Class="JogoApp.PagInicial"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JogoApp"
        mc:Ignorable="d"
        Title="PagInicial" Height="300" Width="300">
    <Grid>
        <Rectangle Fill="#FF72D0F9" HorizontalAlignment="Left" Height="32" Margin="0,0,-0.4,0" Stroke="Black" VerticalAlignment="Top" Width="294" StrokeThickness="0"/>

        <Label x:Name="lblBemVindo" Content="BEM-VINDO!" HorizontalAlignment="Left" Margin="10,2,0,0" VerticalAlignment="Top" BorderThickness="0" BorderBrush="#FF72D0F9" Width="110" Foreground="White" FontSize="14"/>
        <Button x:Name="btnPerfil" Content="Perfil" HorizontalAlignment="Left" Margin="158,6,0,0" VerticalAlignment="Top" Width="61" Click="btnPerfil_Click" Background="#FF72D0F9" BorderBrush="White" Foreground="White" FontSize="11"/>
        <Button x:Name="btnSair" Content="Sair" HorizontalAlignment="Left" Margin="227,6,0,0" VerticalAlignment="Top" Width="57" Click="btnSair_Click" BorderThickness="1" Foreground="White" BorderBrush="White" Background="#FF72D0F9" FontSize="11"/>

    </Grid>
</Window>
