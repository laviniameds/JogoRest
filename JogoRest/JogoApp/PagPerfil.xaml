<Window x:Class="JogoApp.PagPerfil"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JogoApp"
        mc:Ignorable="d"
        Title="PagPerfil" Height="330.4" Width="307.2">
    <Grid>
        <Label x:Name="lblNome" Content="Nome:" HorizontalAlignment="Left" Margin="53,65,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtNome" IsEnabled="False" HorizontalAlignment="Left" Height="26" Margin="108,61,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" BorderThickness="0,0,0,1"/>
        <Button x:Name="btnAtualizar" Content="Atualizar" HorizontalAlignment="Left" Margin="117,264,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.987,2.281" Click="btnAtualizar_Click" Background="White" BorderBrush="#FF0EC949"/>
        <Label x:Name="lblEmail" Content="E-mail:" HorizontalAlignment="Left" Margin="53,102,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtEmail" IsEnabled="False" HorizontalAlignment="Left" Height="26" Margin="108,96,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" BorderBrush="#FFABADB3" BorderThickness="0,0,0,1"/>
        <Label x:Name="lblTitulo" Content="Conta" HorizontalAlignment="Center" Margin="9,5,9,243" FontSize="24" Width="281" BorderThickness="0,0,0,1" BorderBrush="#FF72D0F9"/>
        <Label x:Name="lblImagem" Content="Imagem:" HorizontalAlignment="Left" Margin="53,146,0,0" VerticalAlignment="Top"/>
        <Image x:Name="img" Source="{Binding Imagem}" HorizontalAlignment="Left" Height="102" Margin="109,146,0,0" VerticalAlignment="Top" Width="119"/>
        <Button x:Name="btnDeletar" Content="Deletar Conta" HorizontalAlignment="Left" Margin="10,264,0,0" VerticalAlignment="Top" Width="85" Click="btnDeletar_Click" BorderBrush="#FFC90C0C" Background="White"/>
        <Button x:Name="btnSair" Content="Sair" HorizontalAlignment="Left" Margin="214,264,0,0" VerticalAlignment="Top" Width="75" Background="White" BorderBrush="#FF72D0F9"/>

    </Grid>
</Window>
