        <TextBox x:Name="txtEmail" HorizontalAlignment="Left" Height="23" Margin="110,95,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" BorderThickness="0,0,0,1"/>
        <PasswordBox x:Name="txtSenha" HorizontalAlignment="Left" Margin="110,47,0,0" VerticalAlignment="Top" Width="120" Height="26" BorderThickness="0,0,0,1"/>

    </Grid>
</Window>
